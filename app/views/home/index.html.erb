<div class="container mx-auto p-6 text-center">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-2xl font-semibold text-gray-800 mb-2">Your Enrolled Sections</h2>
      <p class="text-4xl font-bold text-blue-600"><%= @enrolled_sections_count %></p>
      <p class="text-gray-600">sections you are enrolled in</p>
      <%= link_to 'View My Schedule', sections_path, class: 'mt-4 inline-block text-blue-500 hover:underline' %>
    </div>

    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-2xl font-semibold text-gray-800 mb-2">Available Sections</h2>
      <p class="text-4xl font-bold text-green-600"><%= @available_sections_count %></p>
      <p class="text-gray-600">sections you can enroll in</p>
      <%= link_to 'View Available Sections', available_sections_path, class: 'mt-4 inline-block text-green-500 hover:underline' %>
    </div>
  </div>
</div>
